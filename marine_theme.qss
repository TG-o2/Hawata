/* =================================================================
   MODERN MARINE FISHING APPLICATION THEME
   Clean, Professional, Ocean-Inspired Design
================================================================= */

/* =========================
   GLOBAL STYLES
========================= */

QWidget {
    background-color: #f0f7fc;
    font-family: "Bion";
    font-size: 13px;
    color: #0d3b52;
}

QMainWindow {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #e8f4fa, stop:1 #f0f7fc);
}


/* =========================
   TYPOGRAPHY & LABELS
========================= */

QLabel {
    color: #1a4d66;
    font-weight: 500;
    padding: 2px;
}

QLabel#titleLabel, QLabel[heading="true"] {
    font-size: 22px;
    font-weight: 700;
    color: #0a5278;
    padding: 8px 0;
    letter-spacing: 0.5px;
}

QLabel#subtitle {
    font-size: 16px;
    font-weight: 600;
    color: #146b8c;
}

QLabel#description {
    color: #4a6b7c;
    font-size: 12px;
    line-height: 1.4;
}


/* =========================
   INPUT FIELDS
========================= */

QLineEdit {
    background-color: #ffffff;
    border: 2px solid #c5dce8;
    border-radius: 6px;
    padding: 1px 12px;
    color: #0d3b52;
    selection-background-color: #1e88e5;
    selection-color: white;
    font-size: 13px;
}

QLineEdit:hover {
    border-color: #8fc1da;
}

QLineEdit:focus {
    border: 2px solid #1e88e5;
    background-color: #fcfdfe;
}

QLineEdit:disabled {
    background-color: #e8eff4;
    color: #8fa7b5;
    border-color: #d4dfe6;
}

QLineEdit[readOnly="true"] {
    background-color: #f5f9fb;
    border-color: #d9e6ed;
}


/* =========================
   TEXT EDIT
========================= */

QTextEdit, QPlainTextEdit {
    background-color: #ffffff;
    border: 2px solid #c5dce8;
    border-radius: 6px;
    padding: 10px;
    color: #0d3b52;
    selection-background-color: #1e88e5;
    selection-color: white;
}

QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #1e88e5;
}


/* =========================
   BUTTONS
========================= */

QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #1e88e5, stop:1 #1976d2);
    color: white;
    border: none;
    border-radius: 6px;
    padding: 10px 20px;
    font-weight: 600;
    font-size: 13px;
    min-height: 20px;
}

QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #2196f3, stop:1 #1e88e5);
}

QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #1565c0, stop:1 #0d47a1);
    padding-top: 12px;
}

QPushButton:disabled {
    background: #b8c9d4;
    color: #e8f0f5;
}


/* Secondary Button Style */
QPushButton#secondary, QPushButton[style="secondary"] {
    background: white;
    color: #1e88e5;
    border: 2px solid #1e88e5;
}

QPushButton#secondary:hover, QPushButton[style="secondary"]:hover {
    background: #e3f2fd;
    border-color: #1976d2;
}

/* Success Button */
QPushButton#success, QPushButton[style="success"] {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #26a69a, stop:1 #00897b);
}

QPushButton#success:hover, QPushButton[style="success"]:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #180fff, stop:1 #26a69a);
}
/* test Button */
QPushButton#test, QPushButton[style="test"] {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FFF95B, stop:1 #00897b);
}

QPushButton#test:hover, QPushButton[style="test"]:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FFF95B, stop:1 #26a69a);
}


/* Danger Button */
QPushButton#danger, QPushButton[style="danger"] {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,stop:0 #ef5350, stop:1 #e53935);
}

QPushButton#danger:hover, QPushButton[style="danger"]:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #f44336, stop:1 #ef5350);
}
/* =========================
   AHMED SECTION
========================= */
