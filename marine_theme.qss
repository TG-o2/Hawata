QPushButton#export_pdf:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #1976d2, stop:1 #1565c0);
}

/* Result label below table */
QLabel#labelResults {
    font-weight: bold;
    color: #0a4c73;
    font-size: 14px;
}

/* Layout styling */
QWidget#layoutWidget {
    background-color: transparent;
}

/* Scrollbars inside table */
QTableWidget#tableWidget QScrollBar {
    background: #e0e0e0;
    border-radius: 5px;
}
QTableWidget#tableWidget QScrollBar::handle {
    background: #0a4c73;
    border-radius: 5px;
}

